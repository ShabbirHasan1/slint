import { CosmicPalette, CosmicFontSettings, Icons } from "styling.slint";
import { SpinBoxBase } from "../common/spinbox-base.slint";

component SpinBoxButton {
    callback clicked <=> i-touch-area.clicked;

    in property <image> icon <=> i-icon.source;

    min-width: 28px;
    horizontal-stretch: 0;

    states [
        pressed when i-touch-area.pressed : {
            i-background.background: CosmicPalette.subtle;
        }
    ]

    i-background := Rectangle {
        border-radius: 3px;

        i-icon := Image {
            image-fit: contain;
            colorize: CosmicPalette.text-secondary;
            width: 12px;

            animate colorize { duration: 150ms; }
        }
    }

    i-touch-area := TouchArea {}
}

export component SpinBox {
    in property <int> minimum <=> i-base.minimum;
    in property <int> maximum <=> i-base.maximum;
    in property <bool> enabled <=> i-base.enabled;
    out property <bool> has-focus <=> i-base.has-focus;
    in-out property <int> value <=> i-base.value;

    callback edited <=> i-base.edited;

    min-width: 128px;
    min-height: 30px;
    vertical-stretch: 0;
    horizontal-stretch: 1;
    accessible-role: spinbox;
    accessible-value: root.value;
    accessible-value-minimum: root.minimum;
    accessible-value-maximum: root.maximum;
    accessible-value-step: (root.maximum - root.minimum) / 100;

    states [
        disabled when !root.enabled : {
            i-background.background: CosmicPalette.control-disabled;
            i-background.border-color: CosmicPalette.border;
            i-base.color: CosmicPalette.text-disabled;
            i-base.selection-foreground-color: CosmicPalette.text-accent-foreground-disabled;
        }
        focused when root.has-focus : {
            i-background.background: CosmicPalette.control-input-active;
            i-background.border-color: CosmicPalette.border;
            i-focus-border.background: CosmicPalette.accent-background;
        }
    ]

    i-background := Rectangle {
        border-radius: 4px;
        background: CosmicPalette.control-background;
        border-width: 1px;
        border-color: CosmicPalette.text-control-border;

        i-layout := HorizontalLayout {
            padding-left: 12px;
            padding-right: 2px;
            padding-top: 4px;
            padding-bottom: 4px;
            spacing: 4px;

            Rectangle {
                clip: true;
                horizontal-stretch: 1;

                i-base := SpinBoxBase {
                    width: 100%;
                    color: CosmicPalette.control-foreground;
                    font-size: CosmicFontSettings.body.font-size;
                    font-weight: CosmicFontSettings.body.font-weight;
                    selection-background-color: CosmicPalette.selection-background;
                    selection-foreground-color: CosmicPalette.accent-foreground;
                }
            }

            SpinBoxButton {
                visible: root.enabled;
                icon: Icons.chevron-up;

                clicked => {
                    i-base.increment();
                }
            }

            SpinBoxButton {
                visible: root.enabled;
                icon: Icons.chevron-down;

                clicked => {
                    i-base.decrement();
                }
            }
        }

        i-focus-border := Rectangle {
            x: parent.border-radius;
            y: parent.height - self.height;
            width: parent.width - 2 * parent.border-radius;
            height: 2px;
        }
    }
}
